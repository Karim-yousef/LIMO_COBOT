<?xml version="1.0"?>
<launch>
    <!-- 
    SLAM Launch File for LIMO COBOT Simulation
    This file runs gmapping to create a map while you drive the robot around.
    
    Usage:
    1. First launch the robot: roslaunch limo_cobot_moveit demo_gazebo.launch
    2. Then in another terminal: roslaunch limo_gazebo_sim limo_slam.launch
    3. Drive the robot with: rosrun teleop_twist_keyboard teleop_twist_keyboard.py
    4. Save map when done: rosrun map_server map_saver -f ~/maps/my_map
    -->

    <!-- GMapping SLAM Node -->
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
        <!-- Scan topic from LiDAR -->
        <remap from="scan" to="/limo/scan"/>
        
        <!-- Frame settings -->
        <param name="base_frame" value="base_footprint"/>
        <param name="odom_frame" value="odom"/>
        <param name="map_frame" value="map"/>
        
        <!-- Map update settings -->
        <param name="map_update_interval" value="2.0"/>
        
        <!-- Sensor settings -->
        <param name="maxUrange" value="12.0"/>
        <param name="maxRange" value="12.0"/>
        
        <!-- Processing settings -->
        <param name="sigma" value="0.05"/>
        <param name="kernelSize" value="1"/>
        <param name="lstep" value="0.05"/>
        <param name="astep" value="0.05"/>
        <param name="iterations" value="5"/>
        <param name="lsigma" value="0.075"/>
        <param name="ogain" value="3.0"/>
        <param name="lskip" value="0"/>
        
        <!-- Motion model (how much the robot can slip) -->
        <param name="srr" value="0.1"/>
        <param name="srt" value="0.2"/>
        <param name="str" value="0.1"/>
        <param name="stt" value="0.2"/>
        
        <!-- Update thresholds -->
        <param name="linearUpdate" value="0.5"/>
        <param name="angularUpdate" value="0.3"/>
        <param name="temporalUpdate" value="2.0"/>
        
        <!-- Particle filter -->
        <param name="resampleThreshold" value="0.5"/>
        <param name="particles" value="50"/>
        
        <!-- Map size (in meters) -->
        <param name="xmin" value="-25.0"/>
        <param name="ymin" value="-25.0"/>
        <param name="xmax" value="25.0"/>
        <param name="ymax" value="25.0"/>
        
        <!-- Map resolution (meters per pixel) -->
        <param name="delta" value="0.05"/>
        
        <!-- Likelihood settings -->
        <param name="llsamplerange" value="0.01"/>
        <param name="llsamplestep" value="0.01"/>
        <param name="lasamplerange" value="0.005"/>
        <param name="lasamplestep" value="0.005"/>
    </node>

    <!-- RViz for viewing the map being built -->
    <node pkg="rviz" type="rviz" name="rviz_slam" 
          args="-d $(find limo_gazebo_sim)/rviz/slam.rviz"
          required="false"/>

</launch>
