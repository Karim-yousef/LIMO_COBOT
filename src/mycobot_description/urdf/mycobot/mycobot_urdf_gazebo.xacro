<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="mycobot">

  <!-- Inertia macro for simple box approximation -->
  <xacro:macro name="default_inertial" params="mass">
    <inertial>
      <mass value="${mass}" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
    </inertial>
  </xacro:macro>

  <link name="joint1">
    <visual>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint1.dae"/>
      </geometry>
      <origin xyz="0.0 0 0" rpy="0 0 -1.5708"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint1.dae"/>
      </geometry>
      <origin xyz="0.0 0 0" rpy="0 0 -1.5708"/>
    </collision>
    <xacro:default_inertial mass="0.2"/>
  </link>

  <link name="joint2">
    <visual>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint2.dae"/>
      </geometry>
      <origin xyz="0.0 0 -0.06096" rpy="0 0 -1.5708"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint2.dae"/>
      </geometry>
      <origin xyz="0.0 0 -0.06096" rpy="0 0 -1.5708"/>
    </collision>
    <xacro:default_inertial mass="0.15"/>
  </link>

  <link name="joint3">
    <visual>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint3.dae"/>
      </geometry>
      <origin xyz="0.0 0 0.03256" rpy="0 -1.5708 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint3.dae"/>
      </geometry>
      <origin xyz="0.0 0 0.03256" rpy="0 -1.5708 0"/>
    </collision>
    <xacro:default_inertial mass="0.12"/>
  </link>

  <link name="joint4">
    <visual>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint4.dae"/>
      </geometry>
      <origin xyz="0.0 0 0.03056" rpy="0 -1.5708 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint4.dae"/>
      </geometry>
      <origin xyz="0.0 0 0.03056" rpy="0 -1.5708 0"/>
    </collision>
    <xacro:default_inertial mass="0.1"/>
  </link>

  <link name="joint5">
    <visual>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint5.dae"/>
      </geometry>
      <origin xyz="0.0 0 -0.03356" rpy="-1.5708 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint5.dae"/>
      </geometry>
      <origin xyz="0.0 0 -0.03356" rpy="-1.5708 0 0"/>
    </collision>
    <xacro:default_inertial mass="0.08"/>
  </link>

  <link name="joint6">
    <visual>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint6.dae"/>
      </geometry>
      <origin xyz="0 0.00 -0.038" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint6.dae"/>
      </geometry>
      <origin xyz="0 0.00 -0.038" rpy="0 0 0"/>
    </collision>
    <xacro:default_inertial mass="0.06"/>
  </link>

  <link name="joint6_flange">
    <visual>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint7.dae"/>
      </geometry>
      <origin xyz="0.0 0 -0.012" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://mycobot_description/urdf/mycobot/joint7.dae"/>
      </geometry>
      <origin xyz="0.0 0 -0.012" rpy="0 0 0"/>
    </collision>
    <xacro:default_inertial mass="0.05"/>
  </link>

  <!-- Joints -->
  <joint name="joint2_to_joint1" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.14" upper="3.14159" velocity="2.0"/>
    <parent link="joint1"/>
    <child link="joint2"/>
    <origin xyz="0 0 0.13156" rpy="0 0 0"/>
  </joint>

  <joint name="joint3_to_joint2" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.14" upper="3.14159" velocity="2.0"/>
    <parent link="joint2"/>
    <child link="joint3"/>
    <origin xyz="0 0 0" rpy="0 1.5708 -1.5708"/>
  </joint>

  <joint name="joint4_to_joint3" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.14" upper="3.14159" velocity="2.0"/>
    <parent link="joint3"/>
    <child link="joint4"/>
    <origin xyz="-0.1104 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="joint5_to_joint4" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.14" upper="3.14159" velocity="2.0"/>
    <parent link="joint4"/>
    <child link="joint5"/>
    <origin xyz="-0.096 0 0.06462" rpy="0 0 -1.5708"/>
  </joint>

  <joint name="joint6_to_joint5" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.14" upper="3.14159" velocity="2.0"/>
    <parent link="joint5"/>
    <child link="joint6"/>
    <origin xyz="0 -0.07318 0" rpy="1.5708 -1.5708 0"/>
  </joint>

  <joint name="joint6output_to_joint6" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.14" upper="3.14159" velocity="2.0"/>
    <parent link="joint6"/>
    <child link="joint6_flange"/>
    <origin xyz="0 0.0456 0" rpy="-1.5708 0 0"/>
  </joint>

  <!-- Gazebo colors -->
  <gazebo reference="joint1">
    <material>Gazebo/Grey</material>
  </gazebo>
  <gazebo reference="joint2">
    <material>Gazebo/White</material>
  </gazebo>
  <gazebo reference="joint3">
    <material>Gazebo/Grey</material>
  </gazebo>
  <gazebo reference="joint4">
    <material>Gazebo/White</material>
  </gazebo>
  <gazebo reference="joint5">
    <material>Gazebo/Grey</material>
  </gazebo>
  <gazebo reference="joint6">
    <material>Gazebo/White</material>
  </gazebo>
  <gazebo reference="joint6_flange">
    <material>Gazebo/Grey</material>
  </gazebo>

</robot>
